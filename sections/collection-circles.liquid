        <span class="mx-8 text-sm font-medium">✦ DESCUENTOS 10% OFF</span>
    </div>
</div>


<!-- Banner animado inferior -->
<div class="w-full bg-white py-12 md:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    
    <!-- Título de la sección -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
        {{ section.settings.section_title | default: 'Categorías' }}
      </h2>
    </div>

    <!-- Grid de 3 círculos -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 items-start justify-items-center">
      
      {% for i in (1..3) %}
        {% assign image_key = 'circle_' | append: i | append: '_image' %}
        {% assign title_key = 'circle_' | append: i | append: '_title' %}
        {% assign url_key = 'circle_' | append: i | append: '_url' %}
        
        <div class="flex flex-col items-center text-center group cursor-pointer">
          <!-- Círculo -->
          <a href="{{ section.settings[url_key] | default: '#' }}" class="block mb-4 transition-transform duration-300 hover:scale-105">
            <div class="w-64 h-64 rounded-full overflow-hidden border-2 border-white hover:border-amber-600 transition-all shadow-lg bg-white">
              {% if section.settings[image_key] %}
                {{ section.settings[image_key] | image_url: width: 512 | image_tag: alt: section.settings[title_key], class: 'w-full h-full object-cover', loading: 'lazy', width: 512, height: 512 }}
              {% else %}
                <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                  <span class="text-gray-400 text-sm">Sin imagen</span>
                </div>
              {% endif %}
            </div>
          </a>
          
          <!-- Título del círculo -->
          <a href="{{ section.settings[url_key] | default: '#' }}" class="text-lg font-semibold text-gray-800 hover:text-amber-600 transition-colors">
            {{ section.settings[title_key] | default: 'Categoría' }}
          </a>
        </div>
      {% endfor %}
      
    </div>
  </div>
</div>

