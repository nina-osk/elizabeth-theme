    color: #8B7355;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    word-wrap: break-word;
}

/* ========================================
   PRODUCTS SECTION
   ======================================== */
.collares-products {
    background-color: white;
    padding: 2rem 0;
    overflow-x: hidden;
    max-width: 100vw;
}

.collares-products__container {
