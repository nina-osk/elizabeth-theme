{% comment %}
  Template refactorizado para mostrar productos filtrados por tag
  Con diseño responsive optimizado para móvil y desktop
{% endcomment %}

{% assign target_tag = section.settings.filter_tag | default: "Collares" %}
{% assign target_tag_lower = target_tag | downcase %}

<!-- Hero Section Responsive -->
<div class="collares-hero">
    <div class="collares-hero__container">
        <h1 class="collares-hero__title">{{ section.settings.title | default: "Collares" }}</h1>
        {% if section.settings.description != blank %}
            <div class="collares-hero__description">{{ section.settings.description }}</div>
        {% endif %}
    </div>
</div>

<!-- Products Section -->
<div class="collares-products">
    <div class="collares-products__container">
        {% assign all_products = collections.all.products %}

        <!-- Filtros Responsive -->
        <div class="collares-filters">
            <div class="collares-filters__buttons">
                <button onclick="filterProducts('all')" id="filter-all" class="filter-btn filter-btn--active">
                    Todos
                </button>
                <button onclick="filterProducts('18k')" id="filter-18k" class="filter-btn">
                    18K
                </button>
                <button onclick="filterProducts('9k')" id="filter-9k" class="filter-btn">
                    9K
                </button>
                <button onclick="filterProducts('dijes')" id="filter-dijes" class="filter-btn">
                    Dijes
                </button>
            </div>
            <div class="collares-filters__count">
                <span id="visible-count"></span> productos encontrados
            </div>
        </div>

        <!-- Grid de productos responsive -->
        {% assign collares_count = 0 %}
        {% for product in all_products %}
            {% assign product_tags_lower = product.tags | join: ',' | downcase | split: ',' %}
            {% for tag in product_tags_lower %}
                {% assign tag_trimmed = tag | strip %}
                {% if tag_trimmed == target_tag_lower %}
                    {% assign collares_count = collares_count | plus: 1 %}
                    {% break %}
                {% endif %}
            {% endfor %}
        {% endfor %}
        
        {% if collares_count > 0 %}
            <div class="collares-grid" id="products-grid">
                {% for product in all_products %}
                    {% assign has_tag = false %}
                    {% assign product_tags_lower = product.tags | join: ',' | downcase | split: ',' %}
                    {% for tag in product_tags_lower %}
                        {% assign tag_trimmed = tag | strip %}
                        {% if tag_trimmed == target_tag_lower %}
                            {% assign has_tag = true %}
                            {% break %}
                        {% endif %}
                    {% endfor %}
                    
                    {% if has_tag %}
                        {% assign product_tags = product.tags | join: ',' | downcase %}
                        <div class="product-item" data-tags="{{ product_tags }}">
                            {% render 'product-card', product: product, collection_handle: collection.handle %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            <!-- Estado vacío -->
            <div class="collares-empty">
                <svg class="collares-empty__icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
                <h2 class="collares-empty__title">No hay productos con el tag "{{ target_tag }}"</h2>
                <p class="collares-empty__text">No se encontraron productos con esta etiqueta.</p>
                <a href="{{ routes.all_products_url }}" class="collares-empty__button">Ver todos los productos</a>
            </div>
        {% endif %}
    </div>
</div>

<script>
function filterProducts(filterType) {
    const productItems = document.querySelectorAll('.product-item');
    const filterButtons = document.querySelectorAll('.filter-btn');
    const visibleCountElement = document.getElementById('visible-count');
    let visibleCount = 0;

    // Actualizar clases de botones
    filterButtons.forEach(btn => btn.classList.remove('filter-btn--active'));
    if(document.getElementById('filter-' + filterType)) {
        document.getElementById('filter-' + filterType).classList.add('filter-btn--active');
    }

    // Filtrar productos
    productItems.forEach(item => {
        const tags = item.dataset.tags;
        const shouldShow = filterType === 'all' || tags.includes(filterType);
        item.style.display = shouldShow ? 'block' : 'none';
        if (shouldShow) visibleCount++;
    });

    visibleCountElement.textContent = visibleCount;
}

// Inicializar contador
document.addEventListener('DOMContentLoaded', function() {
    const totalProducts = document.querySelectorAll('.product-item').length;
    document.getElementById('visible-count').textContent = totalProducts;
});
</script>

<style>
/* ========================================
   PREVENCIÓN DE SCROLL HORIZONTAL
