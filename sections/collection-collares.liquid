{% comment %}
  Este template muestra productos filtrados por el tag "collares"
  desde todos los productos de la tienda
  y luego permite filtrar por subtags: 18k, 9k
{% endcomment %}

{% comment %} Tag principal para filtrar productos {% endcomment %}
{% assign target_tag = section.settings.filter_tag | default: "Collares" %}
{% assign target_tag_lower = target_tag | downcase %}

<!-- Hero Section -->
<div style="background-color: #F5F1E8; padding: 6rem 2rem; text-align: center;">
    <div style="max-width: 1280px; margin: 0 auto;">
        
        <h1 style="font-family: Georgia, serif; font-size: 5rem; font-weight: 400; color: #2d2d2d; margin-bottom: 2rem; line-height: 1.1;">
            {{ section.settings.title | default: "Collares" }}
        </h1>
        
        {% if section.settings.description != blank %}
            <div style="font-size: 1.125rem; color: #8B7355; line-height: 1.8; max-width: 800px; margin: 0 auto;">
                {{ section.settings.description }}
            </div>
        {% endif %}
        
    </div>
</div>

<div style="background-color: white; padding: 4rem 0;">
    <div style="max-width: 1280px; margin: 0 auto; padding: 0 2rem;">
        
        {% comment %} Obtenemos todos los productos {% endcomment %}
        {% assign all_products = collections.all.products %}

            <!-- Filtros -->
            <div style="margin-bottom: 3rem;">
                <div style="display: flex; flex-direction: column; align-items: center;">
                    <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem;">
                        <button onclick="filterProducts('all')" id="filter-all" class="filter-btn" style="padding: 0.75rem 2rem; font-weight: 500; transition: all 0.2s; background-color: #2d2d2d; color: white; border: none; cursor: pointer; font-size: 0.9375rem;">
                            Todos
                        </button>
                        <button onclick="filterProducts('18k')" id="filter-18k" class="filter-btn" style="padding: 0.75rem 2rem; font-weight: 500; transition: all 0.2s; background-color: #e8e8e8; color: #666; border: none; cursor: pointer; font-size: 0.9375rem;">
                            18K
                        </button>
                        <button onclick="filterProducts('9k')" id="filter-9k" class="filter-btn" style="padding: 0.75rem 2rem; font-weight: 500; transition: all 0.2s; background-color: #e8e8e8; color: #666; border: none; cursor: pointer; font-size: 0.9375rem;">
                            9K
                        </button>
                    </div>
                    
                    <!-- Nombre del filtro activo -->
                    <div style="margin-top: 1.5rem; font-size: 0.875rem; color: #999;">
                        <span id="visible-count"></span> productos encontrados
                    </div>
                </div>
            </div>

            <!-- Grid de productos - 4 columnas -->
            {% comment %} Contar productos que tienen el tag {% endcomment %}
            {% assign collares_count = 0 %}
            {% for product in all_products %}
                {% assign product_tags_lower = product.tags | join: ',' | downcase | split: ',' %}
                {% for tag in product_tags_lower %}
                    {% assign tag_trimmed = tag | strip %}
                    {% if tag_trimmed == target_tag_lower %}
                        {% assign collares_count = collares_count | plus: 1 %}
                        {% break %}
                    {% endif %}
                {% endfor %}
            {% endfor %}
            
            {% if collares_count > 0 %}
                <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem;" id="products-grid">
                    {% for product in all_products %}
                        {% comment %} Verificar si el producto tiene el tag {% endcomment %}
                        {% assign has_tag = false %}
                        {% assign product_tags_lower = product.tags | join: ',' | downcase | split: ',' %}
                        {% for tag in product_tags_lower %}
                            {% assign tag_trimmed = tag | strip %}
                            {% if tag_trimmed == target_tag_lower %}
                                {% assign has_tag = true %}
                                {% break %}
                            {% endif %}
                        {% endfor %}
                        
                        {% if has_tag %}
                            {% assign product_tags = product.tags | join: ',' | downcase %}
                            <div class="product-item" data-tags="{{ product_tags }}">
                                {% render 'product-card', product: product %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% else %}
                <!-- Estado vacío -->
                <div style="text-align: center; padding: 4rem 0;">
                    <svg style="width: 6rem; height: 6rem; margin: 0 auto 1.5rem; color: #ddd;" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <h2 style="font-size: 1.5rem; font-weight: 600; color: #2d2d2d; margin-bottom: 0.5rem;">
                        No hay productos con el tag "{{ target_tag }}"
                    </h2>
                    <p style="color: #888; margin-bottom: 2rem;">
                        No se encontraron productos con esta etiqueta. Asegúrate de tener productos etiquetados con "{{ target_tag }}".
                    </p>
                    <a href="{{ routes.all_products_url }}" style="display: inline-block; padding: 0.75rem 1.5rem; background-color: #2d2d2d; color: white; font-weight: 600; text-decoration: none; transition: background-color 0.2s;">
                        Ver todos los productos
                    </a>
                </div>
            {% endif %}

    </div>
</div>

<script>
function filterProducts(filterType) {
    const productItems = document.querySelectorAll('.product-item');
    const filterButtons = document.querySelectorAll('.filter-btn');
    const visibleCountElement = document.getElementById('visible-count');
    let visibleCount = 0;

    // Actualizar estilos de botones
    filterButtons.forEach(btn => {
        btn.style.backgroundColor = '#e8e8e8';
        btn.style.color = '#666';
    });
    
    const activeButton = document.getElementById('filter-' + filterType);
    activeButton.style.backgroundColor = '#2d2d2d';
    activeButton.style.color = 'white';

    // Filtrar productos
    productItems.forEach(item => {
        const tags = item.dataset.tags;
        
        if (filterType === 'all') {
            item.style.display = 'block';
            visibleCount++;
        } else if (tags.includes(filterType)) {
            item.style.display = 'block';
            visibleCount++;
        } else {
            item.style.display = 'none';
        }
    });

    // Actualizar contador
    visibleCountElement.textContent = visibleCount;
}

// Inicializar con todos los productos visibles
document.addEventListener('DOMContentLoaded', function() {
    const totalProducts = document.querySelectorAll('.product-item').length;
    document.getElementById('visible-count').textContent = totalProducts;
});
</script>

<style>
    .filter-btn:hover {
        opacity: 0.9;
    }
    
    .product-item {
        transition: opacity 0.3s ease;
    }
</style>

{% schema %}
{
    "name": "Collares por Tag",
    "class": "shopify-section--collares",
    "settings": [
        {
            "type": "text",
            "id": "filter_tag",
            "label": "Tag para filtrar",
            "default": "Collares",
            "info": "Muestra solo productos que tengan este tag. Asegúrate de etiquetar tus productos con 'Collares'"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Título de la sección",
            "default": "Collares"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Descripción",
            "info": "Descripción opcional para mostrar debajo del título"
        },
        {
            "type": "paragraph",
            "content": "✅ Esta sección muestra TODOS los productos filtrados por el tag 'Collares'. Los botones de filtro (18K, 9K) funcionan en el frontend filtrando por subtags adicionales. Etiqueta tus productos con: 'Collares' y opcionalmente '18k' o '9k'."
        }
    ]
}
{% endschema %}
