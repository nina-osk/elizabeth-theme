   ======================================== */
.collares-filters {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
}

.collares-filters__buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    max-width: 500px;
}

.filter-btn {
    padding: 0.65rem 1.25rem;
    font-weight: 500;
    font-size: 0.85rem;
    transition: all 0.2s;
    background-color: #e8e8e8;
    color: #666;
    border: none;
    cursor: pointer;
    border-radius: 0;
    flex: 1 1 auto;
    min-width: 90px;
}

.filter-btn--active {
    background-color: #AFC4AE;
    color: white;
}

.filter-btn:hover {
    opacity: 0.9;
}

.collares-filters__count {
    font-size: 0.8rem;
    color: #999;
}

/* ========================================
   GRID RESPONSIVE - MÓVIL PRIMERO
   ======================================== */
.collares-grid {
    display: grid !important;
    grid-template-columns: 1fr !important;
    gap: 0.75rem;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
}

.product-item {
    transition: opacity 0.3s ease;
    min-width: 0;
    overflow: hidden;
    max-width: 100%;
    box-sizing: border-box;
}

.product-item * {
    max-width: 100%;
    box-sizing: border-box;
}

/* ========================================
   ESTADO VACÍO
   ======================================== */
.collares-empty {
    text-align: center;
    padding: 2rem 1rem;
}

.collares-empty__icon {
    width: 3.5rem;
    height: 3.5rem;
    margin: 0 auto 1rem;
    color: #ddd;
}

.collares-empty__title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2d2d2d;
    margin-bottom: 0.5rem;
}

.collares-empty__text {
    color: #888;
    margin-bottom: 1.25rem;
    font-size: 0.9rem;
}

.collares-empty__button {
    display: inline-block;
    padding: 0.65rem 1.25rem;
    background-color: #AFC4AE;
    color: white;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s;
    font-size: 0.9rem;
}

.collares-empty__button:hover {
    background-color: #9BB49A;
}

