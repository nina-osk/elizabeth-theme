<div class="py-6 px-4 bg-white border-t border-b border-gray-200">
    <div class="mx-auto" style="max-width: 1619px;">
        <div class="flex flex-col md:flex-row md:justify-between items-start md:items-center gap-6 md:gap-8">
            {% for block in section.blocks %}
                <div class="flex items-center gap-4 flex-1">
                    <!-- Ícono -->
                    <div class="flex-shrink-0">
                        {% if block.settings.icon_image %}
                            <img src="{{ block.settings.icon_image |  image_url: width: 60  }}" 
                                 alt="{{ block.settings.title }}"
                                 width="48"
                                 height="48"
                                 class="w-12 h-12">
                        {% else %}
                            <!-- Íconos SVG por defecto -->
                            <div class="w-12 h-12 flex items-center justify-center">
                                {% if block.settings.icon_type == 'shipping' %}
                                    <svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M13 16V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h1m8-1a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1h-2zm-8 0a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1H5z" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M13 6h3l3 4v4h-1" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'delivery' %}
                                    <svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'payment' %}
                                    <svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <rect x="2" y="5" width="20" height="14" rx="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M2 10h20" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'support' %}
                                    <svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M19 11a7 7 0 0 1-7 7m0 0a7 7 0 0 1-7-7m7 7v4m-7-7a7 7 0 0 1 7-7m0 0a7 7 0 0 1 7 7m-7-7V1m-3 21h6" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Contenido -->
                    <div class="flex-1 min-w-0">
                        <h3 class="text-sm font-bold uppercase mb-1 text-gray-900 leading-tight">{{ block.settings.title }}</h3>
                        <p class="text-xs text-gray-600 leading-snug">{{ block.settings.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Service Features",
    "settings": [],
    "blocks": [
        {
            "type": "feature",
            "name": "Característica",
            "settings": [
                {
                    "type": "select",
                    "id": "icon_type",
                    "label": "Tipo de ícono",
                    "options": [
                        {
                            "value": "shipping",
                            "label": "Envío (Camión)"
                        },
                        {
                            "value": "delivery",
                            "label": "Entrega Rápida (Rayo)"
                        },
                        {
                            "value": "payment",
                            "label": "Pagos (Tarjeta)"
                        },
                        {
                            "value": "support",
                            "label": "Soporte (Auriculares)"
                        }
                    ],
                    "default": "shipping"
                },
                {
                    "type": "image_picker",
                    "id": "icon_image",
                    "label": "O sube un ícono personalizado"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Título",
                    "default": "FREE SHIPPING"
                },
                {
                    "type": "textarea",
                    "id": "description",
                    "label": "Descripción",
                    "default": "All the business growth and profit revolve areffective cactchy."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Service Features",
            "blocks": [
                {
                    "type": "feature",
                    "settings": {
                        "icon_type": "shipping",
                        "title": "FREE SHIPPING",
                        "description": "All the business growth and profit revolve areffective cactchy."
                    }
                },
                {
