<div class="py-6 px-4 bg-white border-t border-b border-gray-200">
    <div class="mx-auto" style="max-width: 1619px;">
        <div class="flex flex-col md:flex-row md:justify-between items-start md:items-center gap-6 md:gap-8">
            {% for block in section.blocks %}
                <div class="flex items-center gap-4 flex-1">
                    <!-- Ícono -->
                    <div class="flex-shrink-0">
                        {% if block.settings.icon_image %}
                            <img src="{{ block.settings.icon_image |  image_url: width: 60  }}" 
                                 alt="{{ block.settings.title }}"
                                 width="48"
                                 height="48"
                                 class="w-12 h-12">
                        {% else %}
                            <!-- Íconos SVG por defecto -->
                            <div class="w-12 h-12 flex items-center justify-center">
                                {% if block.settings.icon_type == 'shipping' %}
                                    <!-- Camión de envío -->
                                    <svg class="w-12 h-12" viewBox="0 0 512 512" fill="currentColor">
                                        <path d="M48.64 96v320h48v-32c0-35.346 28.654-64 64-64s64 28.654 64 64v32h96.64v-32c0-35.346 28.654-64 64-64s64 28.654 64 64v32h16c8.837 0 16-7.163 16-16V263.05l-95.5-95.5C382.456 164.227 378.352 163 374 163h-69v-51c0-8.837-7.163-16-16-16H48.64zM385.28 259l-37.64-37.64c-3.156-3.156-7.438-4.93-11.908-4.93H305v61.43h80.28V259zM160.64 352c-35.346 0-64 28.654-64 64s28.654 64 64 64 64-28.654 64-64-28.654-64-64-64zm224 0c-35.346 0-64 28.654-64 64s28.654 64 64 64 64-28.654 64-64-28.654-64-64-64z"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'payment' %}
                                    <!-- Tarjeta de crédito -->
                                    <svg class="w-12 h-12" viewBox="0 0 512 512" fill="currentColor">
                                        <path d="M448 64H64C28.65 64 0 92.65 0 128v256c0 35.35 28.65 64 64 64h384c35.35 0 64-28.65 64-64V128c0-35.35-28.65-64-64-64zm-336 224h-64v-32h64v32zm0 64h-64v-32h64v32zm192-64h-160v-32h160v32zm-160 64v-32h160v32H144zm288-160H16v-64c0-8.82 7.18-16 16-16h448c8.82 0 16 7.18 16 16v64z"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'support' %}
                                    <!-- Auriculares de soporte -->
                                    <svg class="w-12 h-12" viewBox="0 0 512 512" fill="currentColor">
                                        <path d="M256 32C114.52 32 0 146.496 0 288v48c0 35.328 28.656 64 64 64h32c17.664 0 32-14.336 32-32V256c0-17.664-14.336-32-32-32H64.496C79.632 137.216 157.792 64 256 64s176.368 73.216 191.504 160H416c-17.664 0-32 14.336-32 32v112c0 17.664 14.336 32 32 32h32c35.344 0 64-28.672 64-64v-48c0-141.504-114.496-256-256-256zm-64 320h-64v-96h64v96zm256 0h-64v-96h64v96zm-192 64c-17.664 0-32 14.336-32 32s14.336 32 32 32h96c17.664 0 32-14.336 32-32s-14.336-32-32-32h-96z"/>
                                    </svg>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Contenido -->
                    <div class="flex-1 min-w-0">
                        <h3 class="text-sm font-bold uppercase mb-1 text-gray-900 leading-tight">{{ block.settings.title }}</h3>
                        <p class="text-xs text-gray-600 leading-snug">{{ block.settings.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Service Features",
    "settings": [],
    "blocks": [
        {
            "type": "feature",
            "name": "Característica",
            "settings": [
                {
                    "type": "select",
                    "id": "icon_type",
                    "label": "Tipo de ícono",
                    "options": [
                        {
                            "value": "shipping",
                            "label": "Envío (Camión)"
                        },
                        {
                            "value": "payment",
                            "label": "Pagos (Tarjeta)"
                        },
                        {
                            "value": "support",
                            "label": "Soporte (Auriculares)"
                        }
                    ],
                    "default": "shipping"
                },
                {
                    "type": "image_picker",
                    "id": "icon_image",
                    "label": "O sube un ícono personalizado"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Título",
                    "default": "FREE SHIPPING"
                },
                {
                    "type": "textarea",
                    "id": "description",
                    "label": "Descripción",
                    "default": "All the business growth and profit revolve areffective cactchy."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Service Features",
            "blocks": [
                {
                    "type": "feature",
                    "settings": {
                        "icon_type": "payment",
                        "title": "ONLINE PAYMENTS",
                        "description": "Donec ac purus non libero vulputate tetur. Sed usque ullamcorper."
                    }
                },
                {
                    "type": "feature",
                    "settings": {
                        "icon_type": "support",
                        "title": "CUSTOMER SERVICE",
                        "description": "Felis hendrerit aliquet. Quisque dapibus justo fugia, ac eleifend ligula."
                    }
                }
            ]
        }
    ]
}
{% endschema %}
