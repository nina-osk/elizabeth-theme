      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "X (Twitter) URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    }
  ],
  "blocks": [
    {
      "type": "info_item",
      "name": "Info Item",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "options": [
            {
              "value": "question",
              "label": "Question"
            },
            {
              "value": "location",
              "label": "Location"
            },
            {
              "value": "phone",
              "label": "Phone"
            },
            {
              "value": "email",
              "label": "Email"
            }
          ],
          "default": "question"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Having Quires ?"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Nullam pulvinar egestas torto venenatis dolor rutrum non."
        }
      ]
    }
  ],
  "default": {
