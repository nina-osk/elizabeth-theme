<footer style="background-color: #222121; color: white;" class="py-12 px-4">
    <div class="max-w-7xl mx-auto">
        
        <!-- Sección superior con logo, texto y newsletter -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8 pb-8" style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            
            <!-- Logo y texto -->
            <div>
                {% if section.settings.footer_logo %}
                    <img src="{{ section.settings.footer_logo | image_url: width: 200 }}" 
                         alt="{{ shop.name }}"
                         width="200"
                         height="80"
                         loading="lazy"
                         class="mb-4"
                         style="max-width: 200px; height: auto;">
                {% else %}
                    <h2 class="text-3xl font-bold mb-4" style="font-family: cursive;">{{ shop.name }}</h2>
                {% endif %}
                
                {% if section.settings.coupon_text %}
                    <p style="color: #4A90E2;" class="text-sm font-semibold mb-2">{{ section.settings.coupon_text }}</p>
                {% endif %}
                
                <p class="text-sm text-gray-400 leading-relaxed">{{ section.settings.description }}</p>
            </div>

            <!-- Newsletter -->
            <div>
                <h3 class="text-xl font-semibold mb-4">{{ section.settings.newsletter_title }}</h3>
                
                <form action="/contact#contact_form" method="post" class="relative">
                    <input type="hidden" name="form_type" value="customer">
                    <input type="hidden" name="utf8" value="✓">
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    
                    <div class="relative">
                        <input 
                            type="email" 
                            name="contact[email]"
                            placeholder="{{ section.settings.newsletter_placeholder }}"
                            required
                            class="w-full px-4 py-3 pr-12 rounded-full text-gray-900 focus:outline-none">
                        <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 rounded-full bg-gray-900 text-white flex items-center justify-center hover:bg-gray-700 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Línea separadora blanca -->
        <div style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);" class="mb-8"></div>

        <!-- Sección de contacto -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8 pb-8" style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            {% for block in section.blocks %}
                {% if block.type == 'contact_item' %}
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0 w-12 h-12 rounded-full border-2 border-white flex items-center justify-center">
                            {% if block.settings.icon_type == 'question' %}
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            {% elsif block.settings.icon_type == 'phone' %}
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            {% elsif block.settings.icon_type == 'email' %}
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            {% endif %}
                        </div>
                        <div>
                            <h4 class="text-base font-semibold mb-1">{{ block.settings.title }}</h4>
                            <p class="text-sm text-gray-400">{{ block.settings.description }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <!-- Links de navegación y redes sociales -->
        <div class="mb-8">
            <!-- Links de navegación -->
            <nav class="flex flex-wrap justify-center gap-8 md:gap-12 mb-8">
                {% for link in linklists[section.settings.footer_menu].links %}
                    <a href="{{ link.url }}" class="text-base text-white hover:text-gray-400 transition-colors">
                        {{ link.title }}
                    </a>
                {% endfor %}
            </nav>

            <!-- Línea separadora blanca -->
            <div style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);" class="mb-8"></div>

            <!-- Redes sociales con líneas a los lados -->
            <div class="flex items-center justify-center gap-4">
                <div class="flex-1 max-w-xs" style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);"></div>
                
                <div class="flex gap-4">
                    {% if section.settings.instagram_url != blank %}
                        <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border-2 border-white flex items-center justify-center hover:bg-white hover:text-gray-900 transition-all">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                            </svg>
                        </a>
                    {% endif %}
                    {% if section.settings.facebook_url != blank %}
                        <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border-2 border-white flex items-center justify-center hover:bg-white hover:text-gray-900 transition-all">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                    {% endif %}
                    {% if section.settings.twitter_url != blank %}
                        <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border-2 border-white flex items-center justify-center hover:bg-white hover:text-gray-900 transition-all">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                        </a>
                    {% endif %}
                    {% if section.settings.youtube_url != blank %}
                        <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border-2 border-white flex items-center justify-center hover:bg-white hover:text-gray-900 transition-all">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                            </svg>
                        </a>
                    {% endif %}
                    {% if section.settings.pinterest_url != blank %}
                        <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border-2 border-white flex items-center justify-center hover:bg-white hover:text-gray-900 transition-all">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0a12 12 0 0 0-4.37 23.17c-.08-.72-.15-1.83.03-2.62.16-.71 1.05-4.45 1.05-4.45s-.27-.53-.27-1.32c0-1.24.72-2.16 1.61-2.16.76 0 1.13.57 1.13 1.25 0 .76-.49 1.9-.74 2.95-.21.88.44 1.6 1.31 1.6 1.58 0 2.79-1.66 2.79-4.06 0-2.12-1.52-3.6-3.7-3.6-2.52 0-4 1.89-4 3.84 0 .76.29 1.58.66 2.02.07.09.08.17.06.26-.07.28-.22.91-.25 1.04-.04.17-.13.21-.3.13-1.18-.55-1.92-2.27-1.92-3.65 0-2.98 2.17-5.72 6.26-5.72 3.29 0 5.85 2.34 5.85 5.47 0 3.26-2.06 5.88-4.91 5.88-.96 0-1.86-.5-2.17-1.09l-.59 2.25c-.21.82-.78 1.84-1.16 2.47A12 12 0 1 0 12 0z"/>
                            </svg>
                        </a>
                    {% endif %}
                </div>
                
                <div class="flex-1 max-w-xs" style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);"></div>
            </div>
        </div>

        <!-- Línea separadora blanca -->
        <div style="border-bottom: 1px solid rgba(255, 255, 255, 0.2);" class="mb-6"></div>

        <!-- Copyright -->
        <div class="text-center">
            <p class="text-sm text-gray-400">
                {{ section.settings.copyright_text | default: '©BoldCommerceBrands - All Rights Reserved' }}
            </p>
        </div>

    </div>
</footer>

