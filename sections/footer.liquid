    },
    {
      "type": "text",
      "id": "brand_tagline",
      "label": "Eslogan",
      "default": "Tú eres la ocasión especial."
    },
    {
      "type": "header",
      "content": "Columna Explorar (Centro)"
    },
    {
      "type": "text",
      "id": "explore_title",
      "label": "Título de Explorar",
      "default": "EXPLORAR"
    },
    {
      "type": "header",
      "content": "Columna del Menú (Derecha)"
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Título del menú",
      "default": "MUNIER"
    },
    {
      "type": "link_list",
