<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="w-full bg-gradient-to-r from-purple-100 to-purple-200">
  <div class="swiper hero-swiper w-full" style="height: 500px;">
    <div class="swiper-wrapper">
      <div class="swiper-slide w-full h-full">
        <div class="relative w-full h-full flex items-center justify-between px-6 md:px-12 lg:px-20 bg-gradient-to-r from-gray-100 to-purple-100">
          <!-- Content Left -->
          <div class="w-full md:w-1/2 pr-6">
            <p class="text-amber-600 text-xs md:text-sm font-semibold tracking-widest uppercase mb-3">
              {{ section.settings.subtitle }}
            </p>
            <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold text-black mb-4 leading-tight">
              {{ section.settings.title }}
            </h2>
            <p class="text-gray-700 text-sm md:text-base leading-relaxed mb-6">
              {{ section.settings.description }}
            </p>
            <div class="flex gap-3 md:gap-4">
              <button class="bg-black text-white px-5 md:px-6 py-2 md:py-3 text-xs md:text-sm font-semibold uppercase hover:bg-gray-800 transition-colors">
                {{ section.settings.button_1_text }}
              </button>
              <button class="border-2 border-black text-black px-5 md:px-6 py-2 md:py-3 text-xs md:text-sm font-semibold uppercase hover:bg-black hover:text-white transition-colors">
                {{ section.settings.button_2_text }}
              </button>
            </div>
          </div>

          <!-- Circle Right -->
          <div class="hidden md:flex w-1/2 justify-center items-center">
            <div class="relative w-64 h-64 border-2 border-black rounded-full flex items-center justify-center">
              <div class="absolute w-56 h-56 border-2 border-dashed border-black rounded-full"></div>
              <div class="text-4xl font-bold text-black">✦</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation arrows -->
    <div class="swiper-button-prev absolute left-4 top-1/2 -translate-y-1/2 z-20 w-10 h-10 bg-white/80 hover:bg-white rounded-full flex items-center justify-center cursor-pointer transition-all after:!text-black after:!text-lg"></div>
    <div class="swiper-button-next absolute right-4 top-1/2 -translate-y-1/2 z-20 w-10 h-10 bg-white/80 hover:bg-white rounded-full flex items-center justify-center cursor-pointer transition-all after:!text-black after:!text-lg"></div>

    <!-- Pagination -->
    <div class="swiper-pagination absolute bottom-4 left-1/2 -translate-x-1/2 z-20"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiper = new Swiper('.hero-swiper', {
      loop: true,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      pagination: {
        el: '.swiper-pagination',
        type: 'bullets',
        clickable: true,
      },
      speed: 800,
    });
  });
</script>

<style>
  .hero-swiper {
    --swiper-pagination-bullet-size: 12px;
    --swiper-pagination-bullet-horizontal-gap: 10px;
  }
  
  .swiper-button-prev::after,
  .swiper-button-next::after {
    font-size: 18px;
    color: #000;
  }
  
  .swiper-pagination-bullet {
    background-color: rgba(255, 255, 255, 0.6);
  }
  
  .swiper-pagination-bullet-active {
    background-color: #fff;
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "JOYERIA ORO 9K ATEMPORAL"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Descubre La Belleza Del Lujo Sutil"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "En Munier, creemos que el lujo no tiene que ser ostentoso. Es la elegancia silenciosa la que brilla a través de la simplicidad de nuestras piezas."
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Botón 1",
      "default": "MAS DETALLES"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Botón 2",
      "default": "COMPRAR"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
