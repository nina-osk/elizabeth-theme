<script>
document.addEventListener('DOMContentLoaded', function() {
  const gifImage = document.querySelector('.hero-gif-background');
  
  // Iniciar la animación del GIF automáticamente
  if (gifImage) {
    // Usar un pequeno delay para sincronizar con otras animaciones
    setTimeout(function() {
      gifImage.classList.add('visible');
    }, 300);
  }

  // Expandable Card On Click Functionality
  const cardOverlay = document.getElementById('cardOverlay');
  const cardCloseBtn = document.getElementById('cardCloseBtn');
  const cards = document.querySelectorAll('.hero-card');

  const cardData = {
    'ModeloCloseUp-Aretes_Oro_9K-_Vera.png': {
      title: '{{ section.settings.card1_title }}',
      description: '{{ section.settings.card1_description }}'
    },
    'ModeloRight-Aretes_-OroBlanco9K-Aura.png': {
      title: '{{ section.settings.card2_title }}',
      description: '{{ section.settings.card2_description }}'
    },
    'ModeloFront-Aretes_Oro_9K-_Vera.png': {
      title: '{{ section.settings.card3_title }}',
      description: '{{ section.settings.card3_description }}'
    },
    'ModeloCloseUp-Aretes_-OroBlanco9K-Aura.png': {
      title: '{{ section.settings.card4_title }}',
      description: '{{ section.settings.card4_description }}'
    }
  };

  cards.forEach(card => {
    card.addEventListener('click', function(e) {
      // Prevenir que se propague el evento
      e.stopPropagation();
      
      // Obtener la URL de la imagen
      const imgSrc = this.src;
      const imgName = this.getAttribute('data-model-name') || imgSrc.split('/').pop().split('?')[0];
      
      // Obtener datos de la tarjeta
      const data = cardData[imgName] || {
        title: 'Joyería Exclusiva',
        description: 'Descubre la belleza y elegancia de nuestras joyas diseñadas especialmente para ti.'
      };
      
      // Actualizar contenido del modal
      document.getElementById('expandedCardImage').src = imgSrc;
      document.getElementById('expandedCardTitle').textContent = data.title;
      document.getElementById('expandedCardDescription').textContent = data.description;
      
      // Mostrar overlay
      cardOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    });
  });

  // Cerrar modal
  function closeModal() {
    cardOverlay.classList.remove('active');
    document.body.style.overflow = 'auto';
  }

  cardCloseBtn.addEventListener('click', closeModal);
  
  // Cerrar modal cuando se haga clic en el overlay
  cardOverlay.addEventListener('click', function(e) {
    if (e.target === cardOverlay) {
      closeModal();
    }
  });

