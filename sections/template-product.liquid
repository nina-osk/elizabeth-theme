<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.css" />

{% assign selected_variant = product.selected_or_first_available_variant %}

<div style="max-width: 1280px; margin: 0 auto; padding: 2rem 1rem; background-color: #F5F1E8;">
    <div style="display: grid; grid-template-columns: 1fr; gap: 3rem;">
        
        <!-- Product Images Carousel -->
        <div style="grid-column: 1 / -1;">
            <div class="swiper desktop-swiper" style="border: 1px solid #e5e7eb; border-radius: 0.5rem; overflow: hidden; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); height: 600px; background-color: white;">
                <div class="swiper-wrapper">
                    {% for media in product.media %}
                        <div class="swiper-slide">
                            <div style="height: 100%; width: 100%; display: flex; align-items: center; justify-content: center; background-color: white; padding: 1rem;">
                                {% render 'product-media', media: media %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>

        <!-- Product Information -->
        <div style="grid-column: 1 / -1; max-width: 700px; margin: 0 auto; width: 100%;">
            {% form 'product', product, id: 'product-form' %}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'vendor' %}
                            <div style="margin-bottom: 0.5rem;">
                                <span style="font-size: 0.75rem; color: #8B7355; text-transform: uppercase; letter-spacing: 0.1em; font-weight: 600;">{{ product.vendor }}</span>
                            </div>
                            
                        {% when 'title' %}
                            <div style="margin-bottom: 1.5rem;">
                                <h1 style="font-family: Georgia, serif; font-size: 2rem; color: #2d2d2d; font-weight: 400; line-height: 1.2;">{{ product.title }}</h1>
                            </div>
                            
                        {% when 'price' %}
                            <div style="margin-bottom: 1.5rem;" id="price-{{ section.id }}">
                                {% if selected_variant.compare_at_price > selected_variant.price %}
                                    <span style="font-size: 0.9375rem; color: #999; text-decoration: line-through; margin-right: 0.75rem;">{{ selected_variant.compare_at_price | money }}</span>
                                {% endif %}
                                <span style="font-size: 1.5rem; color: #2d2d2d; font-weight: 600;">{{ selected_variant.price | money }}</span>
                                {% if selected_variant.price < selected_variant.compare_at_price %}
                                    <span style="display: inline-block; padding: 0.25rem 0.75rem; font-size: 0.75rem; font-weight: 700; background-color: #D4A574; color: white; border-radius: 1rem; margin-left: 1rem;">OFERTA</span>
                                {% endif %}
                            </div>
                            
                        {% when 'description' %}
                            <div style="margin-bottom: 1.5rem;" x-data="{ expanded: false }">
                                <div style="color: #2d2d2d; line-height: 1.7; font-size: 0.9375rem;">
                                    <div 
                                        style="overflow: hidden; transition: max-height 0.3s ease;"
                                        :style="expanded ? 'max-height: 1000px;' : 'max-height: 4.5rem;'"
                                    >
                                        {{ product.description }}
                                    </div>
                                    {% assign description_length = product.description | size %}
                                    {% if description_length > 150 %}
                                        <button 
                                            @click="expanded = !expanded" 
                                            type="button"
                                            style="margin-top: 0.75rem; font-size: 0.875rem; font-weight: 600; color: #D4A574; background: none; border: none; cursor: pointer; display: flex; align-items: center; gap: 0.5rem; padding: 0; transition: color 0.2s;"
                                            onmouseover="this.style.color='#C99B63'"
                                            onmouseout="this.style.color='#D4A574'"
                                        >
                                            <span x-text="expanded ? 'Ver menos' : 'Ver más descripción'"></span>
                                            <svg 
                                                style="width: 1rem; height: 1rem; transition: transform 0.2s;" 
                                                :style="expanded ? 'transform: rotate(180deg);' : ''"
                                                fill="none" 
                                                stroke="currentColor" 
                                                viewBox="0 0 24 24"
                                            >
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                            </svg>
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                            
                        {% when 'variant_selector' %}
                            <div style="margin-bottom: 1.5rem;">
                                {% unless product.has_only_default_variant %}
                                    <variant-selector data-url="{{ product.url}}" data-section="{{ section.id }}">
                                        {% for option in product.options_with_values %}
                                            <label for="Option-{{ section.id }}-{{ forloop.index0 }}" style="display: block; font-size: 0.875rem; font-weight: 600; color: #2d2d2d; margin-bottom: 0.5rem;">{{ option.name }}</label>
                                            <div style="margin-bottom: 1rem;">
                                                <select 
                                                    name="options[{{ option.name | escape }}]" 
                                                    id="Option-{{ section.id }}-{{ forloop.index0 }}" 
                                                    style="width: 100%; border: 2px solid #e5e7eb; padding: 0.75rem; font-size: 0.9375rem; border-radius: 0; background-color: white; cursor: pointer;"
                                                >
                                                    {% for value in option.values %}
                                                        <option 
                                                            value="{{ value | escape }}"
                                                            {% if option.selected_value == value %}selected="selected"{% endif %}
                                                        >
                                                            {{ value }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        {% endfor %}
                                        <script type="application/json">
                                        {{ product.variants | json }}
                                        </script>
                                    </variant-selector>
                                {% endunless %}
                            </div>

                        {% when 'quantity' %}
                            <div style="margin-bottom: 1.5rem;">
                                <label for="Quantity-{{ section.id }}" style="display: block; font-size: 0.875rem; font-weight: 600; color: #2d2d2d; margin-bottom: 0.5rem;">Cantidad</label>
                                <div>
                                    <input type="number" name="quantity" id="Quantity-{{ section.id }}" value="1" min="1" style="width: 100%; border: 2px solid #e5e7eb; padding: 0.75rem; font-size: 0.9375rem; border-radius: 0;">
                                </div>
                            </div>
                            
                        {% when 'detailed_description' %}
                            <div style="margin-bottom: 1.5rem; border: 2px solid #e5e7eb; border-radius: 0.5rem; overflow: hidden;" x-data="{ open: false }">
                                <button 
                                    @click="open = !open" 
                                    type="button"
                                    style="width: 100%; display: flex; align-items: center; justify-content: space-between; padding: 1rem; text-align: left; background-color: white; border: none; cursor: pointer; transition: background-color 0.2s;"
                                    onmouseover="this.style.backgroundColor='#F5F1E8'"
                                    onmouseout="this.style.backgroundColor='white'"
                                >
                                    <span style="font-weight: 600; color: #2d2d2d; font-size: 0.9375rem;">{{ block.settings.title | default: 'Descripción Detallada' }}</span>
                                    <svg 
                                        style="width: 1.25rem; height: 1.25rem; transition: transform 0.2s; color: #2d2d2d;" 
                                        :style="open ? 'transform: rotate(180deg);' : ''"
                                        fill="none" 
                                        stroke="currentColor" 
                                        viewBox="0 0 24 24"
                                    >
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                    </svg>
                                </button>
                                <div 
                                    x-show="open" 
                                    x-transition:enter="transition ease-out duration-200"
                                    x-transition:enter-start="opacity-0 transform -translate-y-2"
                                    x-transition:enter-end="opacity-100 transform translate-y-0"
                                    x-transition:leave="transition ease-in duration-150"
                                    x-transition:leave-start="opacity-100 transform translate-y-0"
                                    x-transition:leave-end="opacity-0 transform -translate-y-2"
                                    style="padding: 0 1rem 1rem 1rem; color: #2d2d2d; font-size: 0.875rem; line-height: 1.7; background-color: white;"
                                >
                                    {{ block.settings.detailed_text }}
                                </div>
                            </div>

                        {% when 'checkout_buttons' %}
                            <div style="margin-top: 2rem;">
                                <button type="submit" name="add" 
                                    style="width: 100%; padding: 1rem 1.5rem; color: white; background-color: #2d2d2d; border: none; font-weight: 600; font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em; cursor: pointer; transition: all 0.3s; border-radius: 0;"
                                    onmouseover="this.style.backgroundColor='#1a1a1a'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.15)'"
                                    onmouseout="this.style.backgroundColor='#2d2d2d'; this.style.transform='translateY(0)'; this.style.boxShadow='none'"
                                    {% if selected_variant.available == false %}disabled{% endif %}
                                >
                                    {% if selected_variant.available == false %}
                                        Agotado
                                    {% else %}
                                        Agregar al carrito
                                    {% endif %}
                                </button>
                            </div>
                    {% endcase %}
                {% endfor %}
            {% endform %}
        </div>
    </div>
</div>

<style>
