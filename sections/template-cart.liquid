{% if cart.item_count > 0 %}
  <div class="max-w-6xl mx-auto px-4 py-10">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-3xl font-semibold">Tu Carrito ({{ cart.item_count }})</h1>
      <a href="{{ routes.all_products_collection_url }}" class="text-blue-600 hover:text-blue-800 underline text-sm">Continúa comprando</a>
    </div>

    <form action="{{ routes.cart_url }}" method="POST" id="cart-form">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Products -->
        <div class="lg:col-span-2">
          {% for item in cart.items %}
            <div class="flex gap-4 py-6 border-b">
              <a href="{{ item.url }}" class="flex-shrink-0">
                {% if item.image %}
                  <img src="{{ item.image | image_url: width: 150 }}" alt="{{ item.title }}" width="150" height="150" class="w-24 h-24 object-cover rounded border">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-24 h-24 object-cover rounded border' }}
                {% endif %}
              </a>
              
              <div class="flex-grow">
                <div class="flex justify-between mb-2">
                  <div>
                    <a href="{{ item.url }}" class="font-medium text-gray-900 hover:text-gray-700">{{ item.product.title }}</a>
                    {% if item.variant.title != 'Default Title' %}
                      <p class="text-sm text-gray-500 mt-1">{{ item.variant.title }}</p>
                    {% endif %}
                    <p class="text-gray-900 mt-2">{{ item.final_price | money_with_currency }}</p>
                  </div>
                  <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="text-gray-400 hover:text-red-500">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                  </a>
                </div>
                
                <div class="flex flex-col gap-3 mt-3">
                  <div class="flex items-center gap-3">
                    <span class="text-sm text-gray-600">Cantidad:</span>
                    <div class="flex items-center border border-gray-300 rounded">
                      <button type="button" class="px-3 py-1 hover:bg-gray-100" onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.form.submit();">−</button>
                      <input type="number" name="updates[]" value="{{ item.quantity }}" min="1" class="w-16 text-center border-x py-1 focus:outline-none">
                      <button type="button" class="px-3 py-1 hover:bg-gray-100" onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.form.submit();">+</button>
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm text-gray-600">Total:</span>
                    <span class="text-base font-bold text-gray-900">{{ item.final_line_price | money_with_currency }}</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
          
          <div class="mt-6">
            <label for="cart-note" class="block text-sm font-medium mb-2">Notas del pedido (opcional)</label>
            <textarea id="cart-note" name="note" rows="3" class="w-full border rounded px-3 py-2 text-sm" placeholder="Instrucciones especiales, opciones de entrega, etc.">{{ cart.note }}</textarea>
          </div>
          
          <button type="submit" name="update" class="lg:hidden w-full mt-4 bg-gray-800 text-white py-3 rounded hover:bg-black">Actualizar carrito</button>
        </div>

        <!-- Summary -->
        <div class="lg:col-span-1">
          <div class="bg-gray-50 rounded-lg p-6 sticky top-4">
            <h2 class="text-xl font-semibold mb-4">Resumen del pedido</h2>
            
            <div class="space-y-3 pb-4 border-b mb-4">
              <div class="flex justify-between">
                <span class="text-gray-600">Subtotal ({{ cart.item_count }} {% if cart.item_count == 1 %}artículo{% else %}artículos{% endif %})</span>
                <span class="font-medium">{{ cart.total_price | money_with_currency }}</span>
              </div>
              <p class="text-sm text-gray-500">Los impuestos y envío se calculan al finalizar la compra</p>
            </div>
            
            <div class="flex justify-between text-xl font-bold pb-4 border-b mb-4">
              <span>Total</span>
              <span>{{ cart.total_price | money_with_currency }}</span>
            </div>
            
            <button type="submit" name="checkout" class="w-full bg-black text-white py-4 rounded font-semibold hover:bg-gray-800 mb-3">Proceder al pago</button>
            <button type="submit" name="update" class="hidden lg:block w-full border border-gray-800 text-gray-800 py-3 rounded font-semibold hover:bg-gray-800 hover:text-white">Actualizar carrito</button>
            
            <div class="mt-6 pt-6 border-t space-y-3">
              <div class="flex items-center gap-3 text-sm">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>Compra 100% segura</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

{% else %}
  <div class="max-w-6xl h-96 my-10 mx-auto px-4 flex items-center justify-center">
    <div class="text-center">
      <svg class="w-24 h-24 mx-auto text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
      </svg>
      <h1 class="text-3xl font-semibold text-gray-900 mb-4">Tu carrito está vacío</h1>
      <p class="text-gray-600 mb-8">¡Descubre nuestras hermosas joyas y encuentra tu pieza perfecta!</p>
      <a href="{{ routes.all_products_collection_url }}" class="inline-block bg-black text-white px-8 py-3 rounded font-semibold hover:bg-gray-800">Explorar productos</a>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Template Cart",
  "settings": []
}
{% endschema %}
