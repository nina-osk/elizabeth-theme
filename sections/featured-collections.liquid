  "name": "Colección Filtrable",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Colección",
      "label": "Título"
    },
    {
      "type": "range",
      "id": "number_of_products_to_show",
      "min": 4,
      "max": 24,
      "step": 4,
