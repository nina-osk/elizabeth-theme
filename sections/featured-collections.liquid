        {
          "type": "collection",
          "id": "collection",
          "label": "Seleccionar colección"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Colección Filtrable",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}