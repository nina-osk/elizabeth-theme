<div class="max-w-md">
    <div class="text-5xl  font-bold my-4">
      {{ section.settings.title }} 
    </div>
      <p class="text-base  mb:text-xl leading-normal">
      {{ section.settings.subtext_title }} </p>
      <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
            {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-700 text-white rounded">
          {{ section.settings.button_label }}
        </a>
        </div>
</div>

{%  schema %}
{
  "name": "404 Template",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    { "type": "text", "id": "title", "label": "404 Heading Title", "default":"404" },
    { "type": "text", "id": "subtext_title", "label": "404 Subtext", "default":"The page you are looking for does not exist." },
    {"type":"text","id":"button_label","label":"Button Text","default":"Back to Homepage"},
    {"type":"text","id":"button_url","label":"Button URL","default":"/"}],
  "blocks": [],
  "presets": [
    {
      "name": "404 Template"
    }
  ]
}
{% endschema %}