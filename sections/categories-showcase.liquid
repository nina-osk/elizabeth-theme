<div style="width: 100%; background-color: #F5F1E8;">
  <div style="max-width: 1280px; margin: 0 auto; padding: 6rem 2rem; text-align: center;">
    
    <!-- Header -->
    <p style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.15em; color: #8B7355; margin-bottom: 2.5rem;">
      {{ section.settings.header_small | default: "SOMOS MUNIER" }}
    </p>
    
    <!-- Main Quote -->
    <div style="max-width: 950px; margin: 0 auto 3rem;">
      <h2 style="font-family: Georgia, serif; font-size: 2rem; line-height: 1.6; color: #2d2d2d; font-weight: 400;">
        {{ section.settings.quote_part1 }}
        <span style="font-style: italic; color: #D4A574;">{{ section.settings.quote_highlight }}</span>{{ section.settings.quote_part2 }}
      </h2>
    </div>
    
    <!-- Signature -->
    <div style="display: flex; align-items: center; justify-content: center; gap: 1.5rem; margin-top: 3rem;">
      <div style="width: 4rem; height: 1px; background-color: #D4A574;"></div>
      <p style="font-family: Georgia, serif; font-style: italic; color: #D4A574; font-size: 1.25rem;">
        {{ section.settings.signature | default: "Munier" }}
      </p>
      <div style="width: 4rem; height: 1px; background-color: #D4A574;"></div>
    </div>

  </div>
</div>

<style>
  /* Minimal styling for responsive text */
  @media (max-width: 768px) {
    div h2 {
      font-size: 1.5rem !important;
    }
  }
</style>

<script>
  // No carousel functionality needed anymore
</script>

{% schema %}
{
  "name": "Brand Quote Section",
  "settings": [
    {
      "type": "text",
      "id": "header_small",
      "label": "Encabezado Pequeño",
      "default": "SOMOS MUNIER"
    },
    {
      "type": "textarea",
      "id": "quote_part1",
      "label": "Texto de la cita (Parte 1 - antes de la palabra destacada)",
      "default": "\"Somos Munier, una joyeria panameña creada para celebrar lo que te hace "
    },
    {
      "type": "text",
      "id": "quote_highlight",
      "label": "Palabra destacada (en dorado itálico)",
      "default": "auténtica"
    },
    {
      "type": "textarea",
      "id": "quote_part2",
      "label": "Texto de la cita (Parte 2 - después de la palabra destacada)",
      "default": ". Diseñamos piezas en oro 9K con diamantes de laboratorio —duraderas, elegantes y conscientes— hechas para vivir contigo, no para quedarse guardadas.\""
    },
    {
      "type": "text",
      "id": "signature",
      "label": "Firma",
      "default": "Munier"
    }
  ],
  "presets": [
    {
      "name": "Brand Quote Section"
    }
  ]
}
{% endschema %}
