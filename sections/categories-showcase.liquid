<div style="width: 100%; background-color: #F5F1E8; overflow-x: hidden;">
  <div style="max-width: 1280px; margin: 0 auto; padding: 3rem 1rem 2rem; overflow-x: hidden;">
    <!-- Header -->
    <div style="text-align: center; margin-bottom: 2rem;">
      <p class="categories-hero-header" style="font-size: 1.25rem; font-weight: 700; letter-spacing: 0.12em; color: #8B7355; margin-bottom: 2.5rem; text-transform: uppercase;">
        {{ section.settings.header_small | default: "SOMOS MUNIER" }}
      </p>
      
      <div style="max-width: 950px; margin: 0 auto 3rem;">
        <h2 class="categories-hero-quote" style="font-family: Georgia, serif; font-size: 2rem; line-height: 1.6; color: #2d2d2d; font-weight: 400;">
          {{ section.settings.quote_part1 }}
          <span style="font-style: italic; color: #D4A574;">{{ section.settings.quote_highlight }}</span>{{ section.settings.quote_part2 }}
        </h2>
      </div>
      
      <div style="display: flex; align-items: center; justify-content: center; gap: 1.5rem; margin-bottom: 4rem;">
        <div class="categories-hero-divider" style="width: 4rem; height: 1px; background-color: #D4A574;"></div>
        <p class="categories-hero-signature" style="font-family: Georgia, serif; font-style: italic; color: #D4A574; font-size: 1.25rem;">
          {{ section.settings.signature | default: "Munier" }}
        </p>
        <div class="categories-hero-divider" style="width: 4rem; height: 1px; background-color: #D4A574;"></div>
      </div>
    </div>

    <!-- Carousel Container -->
    <div class="carousel-wrapper max-w-6xl mx-auto mb-12" style="max-width: 100%; overflow-x: hidden;">
      <!-- Carousel Track -->
      <div class="relative overflow-hidden" style="height: 500px; max-width: 100%; display: flex; align-items: center; justify-content: center;">
        <div class="carousel-track absolute inset-0 flex items-center justify-center">
          {% assign cards = (1..6) %}
          {% for i in cards %}
            {% assign prod_key = 'category_' | append: i | append: '_product' %}
            {% assign label_key = 'category_' | append: i | append: '_label' %}
            {% assign prod = section.settings[prod_key] %}
            
            <div class="carousel-slide absolute transition-all duration-500 ease-out" 
                 data-index="{{ forloop.index0 }}"
                 data-title="{{ prod.title | escape }}"
                 data-price="{% if prod.selected_or_first_available_variant %}{{ prod.selected_or_first_available_variant.price | money_with_currency }}{% else %}$0.00{% endif %}"
                 data-url="{% if prod != blank %}{{ prod.url | prepend: shop.url }}{% else %}#{% endif %}"
                 role="group"
                 aria-roledescription="slide"
                 aria-label="Slide {{ forloop.index }} of {{ cards.size }}">
              
              <div class="slide-card rounded-xl overflow-hidden shadow-lg" style="background: #E7E5DE;">
                <!-- Category Label -->
                <div class="absolute top-4 left-4 z-10">
                  <a href="#" id="carousel-category-link" style="text-decoration: none; cursor: pointer;">
                    <span class="text-xs font-medium text-gray-700 uppercase tracking-wide px-2 py-1 bg-white/80 rounded">
                      {{ section.settings[label_key] | default: 'Producto' }}
                    </span>
                  </a>
                </div>

                {% if prod != blank and prod.featured_media %}
                  <!-- Product Image -->
                  <div class="relative w-full" style="height: 340px;">
                    {{ prod.featured_media | image_url: width: 600 | image_tag: alt: prod.title, class: 'w-full h-full object-contain', loading: 'lazy', width: 600, height: 600 }}
                    
                    <!-- Action Icons (visible only on active slide) -->
                    <div class="slide-actions absolute bottom-4 left-0 right-0 flex justify-between px-4 opacity-0 transition-opacity duration-300">
                      <button class="w-8 h-8 rounded-full bg-white shadow-md flex items-center justify-center hover:bg-gray-100 transition-colors" aria-label="Rotate">
                        <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                      </button>
                      <button class="w-8 h-8 rounded-full bg-white shadow-md flex items-center justify-center hover:bg-gray-100 transition-colors" aria-label="Add to favorites">
                        <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                      </button>
                    </div>
                  </div>
                {% else %}
                  <div class="w-full flex items-center justify-center text-center" style="height: 340px;">
                    <span class="text-base font-semibold text-gray-700">
                      {{ section.settings[label_key] | default: 'Producto' }}
                    </span>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Product Info (centered below carousel) -->
      <div class="text-center mt-8 mb-6">
        <h3 id="carousel-product-title" class="text-xl md:text-2xl font-semibold text-gray-900 mb-2" style="cursor: pointer;">
          <a id="carousel-product-link" href="#" style="color: inherit; text-decoration: underline; text-underline-offset: 3px; cursor: pointer; transition: color 0.3s ease;">Producto</a>
        </h3>
        <p id="carousel-product-price" class="text-lg md:text-xl font-bold text-gray-900">
          $0.00
        </p>
      </div>

      <!-- Pagination Dots -->
      <div class="flex justify-center gap-2 mb-8" role="group" aria-label="Carousel pagination">
        {% for i in cards %}
          <button 
            class="carousel-dot w-2 h-2 rounded-full transition-all duration-300"
            data-index="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
            style="background: #d1d5db;">
          </button>
        {% endfor %}
      </div>

      <!-- Navigation Controls -->
      <div class="flex justify-center gap-4">
        <button id="carousel-prev" class="carrusel-btn">
          &larr; Anterior
        </button>
        <button id="carousel-next" class="carrusel-btn">
          Siguiente &rarr;
        </button>
      </div>
    </div>

  </div>
</div>

<style>
  /* Carousel Slide Positioning */
  .carousel-slide {
    pointer-events: auto;
    cursor: pointer;
  }

  /* Slide Card Styling */
  .slide-card {
    width: 280px;
    height: 380px;
    will-change: transform, opacity;
  }

  /* Active slide gets border */
  .carousel-slide.is-active .slide-card {
    border: 2px solid #222121;
  }

  /* Show action icons only on active slide */
  .carousel-slide.is-active .slide-actions {
    opacity: 1 !important;
  }

  /* Active dot styling */
  .carousel-dot.is-active {
    background: #222121 !important;
    width: 2.5rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    /* Hero text sizes for mobile */
    .categories-hero-header {
      font-size: 0.65rem !important;
      margin-bottom: 1.5rem !important;
    }
    
    .categories-hero-quote {
      font-size: 1rem !important;
      line-height: 1.5 !important;
    }
    
    .categories-hero-signature {
      font-size: 0.95rem !important;
    }
    
    .categories-hero-divider {
      width: 3rem !important;
    }
    
    .carousel-wrapper .relative {
      overflow: hidden !important;
      height: 560px !important;
    }
    
    .slide-card {
      width: 90vw;
      max-width: 320px;
      height: 420px;
    }
    
    /* Adjust image container on mobile - make it larger */
    .carousel-slide .relative[style*="height: 340px"] {
      height: 380px !important;
    }
    
    /* Fill the entire card with the image - no padding */
    .carousel-slide img {
      object-fit: cover !important;
      padding: 0 !important;
      width: 100% !important;
      height: 100% !important;
    }
    
    /* Make the slide card fit on mobile with visible borders */
    .slide-card {
      width: 85vw !important;
      max-width: 340px !important;
      height: 460px !important;
    }
    
    /* Hide non-active slides on mobile - move them off screen */
    .carousel-slide:not(.is-active) {
      opacity: 0 !important;
      pointer-events: none !important;
      transform: translateX(200vw) translateY(-50%) scale(0.8) !important;
    }
    
    /* Center active slide on mobile */
    .carousel-slide.is-active {
      transform: translateX(-50%) translateY(-50%) scale(1) !important;
      opacity: 1 !important;
      left: 50% !important;
      margin-left: 0 !important;
    }
    
    /* Ensure border is visible */
    .carousel-slide.is-active .slide-card {
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    /* Center navigation buttons on mobile */
    .carousel-wrapper > div:last-child {
      justify-content: center !important;
    }
    
    /* Adjust button size for mobile */
    #carousel-prev,
    #carousel-next {
      padding: 0.75rem 1.5rem;
      font-size: 0.875rem;
    }
  }
  
  @media (min-width: 769px) {
    .carousel-wrapper .relative {
      overflow: hidden !important;
    }
    
    .carousel-wrapper {
      max-width: 100% !important;
      overflow-x: hidden !important;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .carousel-slide,
    .carousel-dot {
      transition: none;
    }
  }

  /* Focus states for accessibility */
  .carousel-slide:focus-visible {
    outline: 2px solid #222121;
    outline-offset: 4px;
  }

  /* Botones de categorías estilo print */
  .category-btn {
    background: #f7f9fb;
    border: 2px solid #e5e7eb;
    color: #222121;
    font-family: inherit;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 1.1rem 2.5rem;
    border-radius: 0;
    box-shadow: none;
    outline: none;
    transition: border-color 0.2s, color 0.2s, background 0.2s;
    margin-right: 1.5rem;
    margin-bottom: 1.5rem;
    cursor: pointer;
    min-width: 180px;
    text-align: center;
    display: inline-block;
  }
  .category-btn:last-child {
    margin-right: 0;
  }
  .category-btn:hover, .category-btn.active {
    border-color: #222121;
    color: #222121;
    background: #f7f9fb;
  }
  .carrusel-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.125rem;
    border: 2px solid #000;
    background: transparent;
    color: #000;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    min-height: 40px;
  }

  .carrusel-btn:hover {
    border-color: #000;
    background: rgba(0, 0, 0, 0.05);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .carrusel-btn {
      padding: 0.5rem 1rem;
      font-size: 0.75rem;
      min-height: 36px;
    }
  }

  .product-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 3rem;
    border: 2px solid #000;
    background: transparent;
    color: #000;
    font-size: 1.1rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-decoration: none;
    text-align: center;
    cursor: default;
    text-transform: uppercase;
    min-height: 80px;
  }

  .product-btn:hover {
    border-color: #000;
    background: rgba(0, 0, 0, 0.05);
  }
</style>

<script>
  console.log('Script iniciado');
  
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM cargado');
    
    const slides = document.querySelectorAll('.carousel-slide');
    console.log('Slides encontrados:', slides.length);
    
    const dots = document.querySelectorAll('.carousel-dot');
    const prevBtn = document.getElementById('carousel-prev');
    const nextBtn = document.getElementById('carousel-next');
    const titleElement = document.getElementById('carousel-product-title');
    const priceElement = document.getElementById('carousel-product-price');
    const productLink = document.getElementById('carousel-product-link');
    const carouselTrack = document.querySelector('.carousel-track');

    console.log('prevBtn:', prevBtn);
    console.log('nextBtn:', nextBtn);
    console.log('titleElement:', titleElement);
    console.log('productLink:', productLink);

    if (slides.length === 0) {
      console.error('No slides found!');
      return;
    }

    let currentIndex = 0;
    const totalSlides = slides.length;
    
    const productData = Array.from(slides).map(slide => ({
      title: slide.dataset.title || 'Producto',
      price: slide.dataset.price || '$0.00',
      url: (slide.dataset.url || '').trim()
    }));

    console.log('Product Data:', productData);

    function getSlideStyle(index, activeIndex) {
      const diff = index - activeIndex;
      const normalizedDiff = diff > totalSlides / 2 ? diff - totalSlides : 
                            diff < -totalSlides / 2 ? diff + totalSlides : diff;
      
      if (normalizedDiff === 0) {
        return { x: 0, scale: 1, opacity: 1, zIndex: 50, isActive: true };
      }
      
      if (normalizedDiff > 0 && normalizedDiff <= 2) {
        const offset = normalizedDiff * 150 + 30;
        return {
          x: offset,
          scale: normalizedDiff === 1 ? 0.85 : 0.75,
          opacity: normalizedDiff === 1 ? 0.75 : 0.5,
          zIndex: 30 - (normalizedDiff * 10),
          isActive: false
        };
      }
      
      if (normalizedDiff < 0 && normalizedDiff >= -2) {
        const offset = normalizedDiff * 150 - 30;
        return {
          x: offset,
          scale: normalizedDiff === -1 ? 0.85 : 0.75,
          opacity: normalizedDiff === -1 ? 0.75 : 0.5,
          zIndex: 30 - (Math.abs(normalizedDiff) * 10),
          isActive: false
        };
      }
      
      return { x: normalizedDiff > 0 ? 400 : -400, scale: 0.5, opacity: 0, zIndex: 1, isActive: false };
    }

    function updateCarousel() {
      slides.forEach((slide, index) => {
        const style = getSlideStyle(index, currentIndex);
        slide.style.transform = `translate(calc(-50% + ${style.x}px), -50%) scale(${style.scale})`;
        slide.style.opacity = style.opacity;
        slide.style.zIndex = style.zIndex;
        slide.style.top = '50%';
        slide.style.left = '50%';
        
        style.isActive ? slide.classList.add('is-active') : slide.classList.remove('is-active');
      });

      dots.forEach((dot, index) => {
        index === currentIndex ? dot.classList.add('is-active') : dot.classList.remove('is-active');
      });

      if (productData[currentIndex]) {
        if (titleElement) titleElement.textContent = productData[currentIndex].title;
        if (priceElement) priceElement.textContent = productData[currentIndex].price;
        if (productLink && productData[currentIndex].url) {
          productLink.href = productData[currentIndex].url;
        }
      }
    }

    function goToSlide(index) {
      currentIndex = (index + totalSlides) % totalSlides;
      updateCarousel();
    }

    if (prevBtn) prevBtn.addEventListener('click', () => goToSlide(currentIndex - 1));
    if (nextBtn) nextBtn.addEventListener('click', () => goToSlide(currentIndex + 1));
    dots.forEach((dot, index) => dot.addEventListener('click', () => goToSlide(index)));
    
    // Add click listener to product link
    if (productLink) {
      productLink.addEventListener('click', (e) => {
        const url = productLink.href;
        if (url && url !== '#' && url !== window.location.href) {
          e.preventDefault();
          window.location.href = url;
        }
      });
    }

    updateCarousel();
    console.log('Carrusel inicializado');
  });
</script>

