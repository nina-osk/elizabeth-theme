<div class="py-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
        
        <!-- Título Principal -->
        <div class="text-center mb-8">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{{ section.settings.title }}</h2>
            <p class="text-gray-700 text-sm md:text-base leading-relaxed max-w-5xl mx-auto">
                {{ section.settings.description }}
            </p>
        </div>

        <!-- Grid de características -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-16 mt-16">
            {% for block in section.blocks %}
                <div class="flex flex-col items-center text-center px-6 py-8 bg-gray-50 rounded-lg hover:bg-amber-50 transition-colors duration-300">
                    <!-- Ícono -->
                    <div class="mb-6">
                        <a href="{% if forloop.index == 1 %}/pages/page-aretes{% elsif forloop.index == 2 %}/pages/page-collares{% elsif forloop.index == 3 %}/products/pulsera{% else %}#{% endif %}" style="display:inline-block; border-radius:50%; overflow:hidden;">
                        {% if block.settings.icon_image %}
                            <img src="{{ block.settings.icon_image |  image_url: width: 80 }}" 
                                 alt="{{ block.settings.feature_title }}"
                                 width="80"
                                 height="80"
                                 class="w-20 h-20">
                        {% else %}
                            <!-- Ícono SVG por defecto -->
                            <div class="w-20 h-20 flex items-center justify-center">
                                {% if block.settings.icon_type == 'diamond' %}
                                    <svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M12 2L2 8l10 14L22 8 12 2z" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M2 8h20M12 2v20" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'necklace' %}
                                    <svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <circle cx="12" cy="12" r="3"/>
                                        <path d="M12 2v7M12 15v7M2 12h7M15 12h7" stroke-linecap="round"/>
                                    </svg>
                                {% elsif block.settings.icon_type == 'certificate' %}
                                    <svg class="w-16 h-16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <rect x="3" y="3" width="18" height="18" rx="2"/>
                                        <path d="M7 12h10M7 8h10M7 16h6" stroke-linecap="round"/>
                                    </svg>
                                {% endif %}
                            </div>
                        {% endif %}
                        </a>
                    </div>

                    <!-- Título de la característica -->
                    <h3 class="text-xl font-semibold text-amber-600 mb-4">{{ block.settings.feature_title }}</h3>

                    <!-- Descripción -->
                    <p class="text-gray-600 text-sm leading-relaxed">{{ block.settings.feature_description }}</p>
                </div>
            {% endfor %}
        </div>

    </div>
</div>

{% schema %}
{
    "name": "Features with Icons",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Piezas Que Brillan Con Tu Luz Interior",
            "label": "Título Principal"
        },
        {
            "type": "textarea",
            "id": "description",
            "default": "Nuestras Creaciones Son Más Que Simples Accesorios; Son Una Extensión De Quien Eres. Cada Pieza Está Cuidadosamente Elaborada Con Un Compromiso Hacia La Calidad, Asegurando Que Puedas Llevarlas Día Tras Día. Ya Sea Un Collar Delicado, Una Pulsera Elegante O Un Anillo Atemporal, Nuestras Joyas Están Hechas Para Brillar Tanto Como Tú.",
            "label": "Descripción"
        }
    ],
    "blocks": [
        {
            "type": "feature",
            "name": "Característica",
            "settings": [
                {
                    "type": "select",
                    "id": "icon_type",
                    "label": "Tipo de ícono",
                    "options": [
                        {
                            "value": "diamond",
                            "label": "Diamante"
                        },
                        {
                            "value": "necklace",
                            "label": "Collar"
                        },
                        {
                            "value": "certificate",
                            "label": "Certificado"
                        }
                    ],
                    "default": "diamond"
                },
                {
                    "type": "image_picker",
                    "id": "icon_image",
                    "label": "O sube un ícono personalizado"
                },
                {
                    "type": "text",
                    "id": "feature_title",
                    "default": "Circonias De Calidad",
                    "label": "Título"
                },
                {
                    "type": "textarea",
                    "id": "feature_description",
                    "default": "Empleamos circonias en cortes precisos como el solitario y el engaste invisible en nuestros collares y pulseras. Este toque de brillo es perfecto para eventos de relevancia y reuniones importantes, ofreciendo una declaración de estilo sutil y elegante.",
                    "label": "Descripción"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Features with Icons",
            "blocks": [
                {
                    "type": "feature",
                    "settings": {
                        "icon_type": "diamond",
                        "feature_title": "Circonias De Calidad",
                        "feature_description": "Empleamos circonias en cortes precisos como el solitario y el engaste invisible en nuestros collares y pulseras. Este toque de brillo es perfecto para eventos de relevancia y reuniones importantes, ofreciendo una declaración de estilo sutil y elegante."
                    }
                },
                {
                    "type": "feature",
                    "settings": {
                        "icon_type": "necklace",
                        "feature_title": "Oro 9K",
                        "feature_description": "El Oro 9k significa que, de 24 partes totales de metal, 9 partes son oro puro (aproximadamente a 679.21% de pureza)"
                    }
                },
                {
                    "type": "feature",
                    "settings": {
                        "icon_type": "certificate",
                        "feature_title": "Garantizados",
                        "feature_description": "Oras varias folia velimagni tincidunt, ac egestas est venenatis. Interdum et malesuada fames erat."
                    }
                }
            ]
        }
    ]
}
{% endschema %}
