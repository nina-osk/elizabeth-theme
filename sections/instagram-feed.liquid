<div class="w-full bg-white py-12 md:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    
    <!-- Título -->
    <div class="text-center mb-8 md:mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
        {{ section.settings.title | default: 'Instagram' }}
      </h2>
      {% if section.settings.instagram_handle %}
        <a href="https://instagram.com/{{ section.settings.instagram_handle }}" 
           target="_blank" 
           class="inline-flex items-center gap-2 text-amber-600 hover:text-amber-700 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          @{{ section.settings.instagram_handle }}
        </a>
      {% endif %}
    </div>

    <!-- Grid de publicaciones - 5 posts de Instagram -->
    <div style="display: flex; flex-wrap: nowrap; gap: 1rem; overflow-x: auto; justify-content: center;">
      {% for block in section.blocks limit:5 %}
        {% if block.settings.instagram_url != blank %}
          <div style="flex: 0 0 auto; width: calc(20% - 0.8rem); min-width: 250px;">
            <blockquote class="instagram-media" 
                        data-instgrm-permalink="{{ block.settings.instagram_url }}" 
                        data-instgrm-version="14"
                        style="background:#FFF; border:0; border-radius:3px; box-shadow:0 0 1px 0 rgba(0,0,0,0.5),0 1px 10px 0 rgba(0,0,0,0.15); margin: 0; max-width:100%; min-width:100%; padding:0; width:100%;">
            </blockquote>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <script async src="//www.instagram.com/embed.js"></script>

    <!-- Botón Ver más en Instagram -->
    {% if section.settings.instagram_handle %}
      <div class="text-center mt-8 md:mt-12">
        <a href="https://instagram.com/{{ section.settings.instagram_handle }}" 
           target="_blank"
           class="text-lg font-semibold text-gray-800 hover:text-amber-600 transition-colors underline decoration-2 underline-offset-4">
          Ver más en Instagram
        </a>
      </div>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Instagram Feed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Instagram"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Usuario de Instagram",
      "info": "Sin el @, ejemplo: munierjewelry",
      "default": "munierjewelry"
    }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Post de Instagram",
      "settings": [
        {
          "type": "url",
          "id": "instagram_url",
          "label": "URL del post de Instagram",
          "info": "Ejemplo: https://www.instagram.com/p/ABC123/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        {
          "type": "post"
        },
        {
          "type": "post"
        },
        {
          "type": "post"
        },
        {
          "type": "post"
        },
        {
          "type": "post"
        }
      ]
    }
  ],
  "max_blocks": 10
}
{% endschema %}