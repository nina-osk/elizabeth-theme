<div class="w-full bg-white py-12 md:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    
    <!-- Título -->
    <div class="text-center mb-8 md:mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
        {{ section.settings.title | default: 'Instagram' }}
      </h2>
      {% if section.settings.instagram_handle %}
        <a href="https://instagram.com/{{ section.settings.instagram_handle }}" 
           target="_blank" 
           class="inline-flex items-center gap-2 text-amber-600 hover:text-amber-700 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          @{{ section.settings.instagram_handle }}
        </a>
      {% endif %}
    </div>

    <!-- Grid de publicaciones -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-3 md:gap-4">
      {% for block in section.blocks %}
        <a href="{{ block.settings.post_url | default: '#' }}" 
           target="_blank"
           class="group relative aspect-square overflow-hidden rounded-lg bg-gray-100 hover:opacity-90 transition-opacity">
          
          {% if block.settings.post_image %}
            {{ block.settings.post_image | image_url: width: 600 | image_tag: alt: block.settings.post_caption, class: 'w-full h-full object-cover', loading: 'lazy', width: 600, height: 600 }}
          {% else %}
            <div class="w-full h-full bg-purple-200 flex items-center justify-center">
              <svg class="w-12 h-12 text-purple-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </div>
          {% endif %}

          <!-- Overlay con ícono de Instagram -->
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all flex items-center justify-center">
            <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>

          <!-- Caption (opcional) -->
          {% if block.settings.post_caption %}
            <div class="absolute bottom-0 left-0 right-0 p-3 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
              <p class="text-white text-xs line-clamp-2">{{ block.settings.post_caption }}</p>
            </div>
          {% endif %}
        </a>
      {% endfor %}
    </div>

    <!-- Botón Ver más en Instagram -->
    {% if section.settings.instagram_handle %}
      <div class="text-center mt-8 md:mt-12">
        <a href="https://instagram.com/{{ section.settings.instagram_handle }}" 
           target="_blank"
           class="text-lg font-semibold text-gray-800 hover:text-amber-600 transition-colors underline decoration-2 underline-offset-4">
          Ver más en Instagram
        </a>
      </div>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Instagram Feed",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Instagram"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Usuario de Instagram",
      "info": "Sin el @, ejemplo: munierjewelry",
      "default": "munierjewelry"
    }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Publicación de Instagram",
      "settings": [
        {
          "type": "image_picker",
          "id": "post_image",
          "label": "Imagen de la publicación"
        },
        {
          "type": "url",
          "id": "post_url",
          "label": "URL de la publicación en Instagram"
        },
        {
          "type": "text",
          "id": "post_caption",
          "label": "Caption (opcional)",
          "info": "Se mostrará al hacer hover"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        {
          "type": "post"
        },
        {
          "type": "post"
        },
        {
          "type": "post"
        },
        {
          "type": "post"
        },
        {
          "type": "post"
        }
      ]
    }
  ],
  "max_blocks": 10
}
{% endschema %}