{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | image_url: width: 1200 }}" alt="{{ media.alt | default: media.preview_image.alt }}" width="600" height="600" class="w-full h-full object-contain" loading="lazy">
    
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-full object-contain' }}

    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'w-full h-full object-contain' }}

    {% when 'model' %}
        {{ media | model_viewer_tag }}

    {% else %}
        {{ media | media_tag }}
{% endcase %}