<div class="w-full py-4 px-2 flex justify-center">
    <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 max-w-sm w-full" style="border: 1px solid #e8e8e8;">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
                <div class="h-64 overflow-hidden bg-gray-50">
                    <img class="w-full h-full object-cover transition duration-500 ease-in-out hover:scale-105 transform" src="{{ product_product.featured_image | image_url: width: 400 }}" alt="{{ product_product.featured_image.alt }}" width="400" height="400" loading="lazy">
                </div>
                
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        
        <div class="flex flex-col p-4 text-center">
            <span class="text-xs text-gray-400 mb-1">{{ product_product.vendor }}</span>

            <a href="{{ product_product.url }}" class="text-gray-800 uppercase font-semibold text-sm mb-2 hover:text-amber-600 transition-colors">{{ product_product.title }}</a>

            <p class="text-gray-900 font-bold text-lg">{{ product_product.price | money }}</p>
        </div>
        
    </div>
</div>