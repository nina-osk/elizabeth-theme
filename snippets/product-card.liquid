<div class="product-card bg-white rounded-lg overflow-hidden transition-all duration-300 w-full">
    <!-- Product Image with Actions -->
    <div class="relative bg-neutral-100 aspect-square group">
        <a href="{{ product_product.url }}" class="block w-full h-full">
            {% if product_product.featured_image %}
                <img 
                    class="w-full h-full object-cover" 
                    src="{{ product_product.featured_image | image_url: width: 500 }}" 
                    alt="{{ product_product.featured_image.alt }}" 
                    width="500" 
                    height="500" 
                    loading="lazy"
                >
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
            {% endif %}
        </a>
        
        <!-- Actions Bar at Bottom of Image -->
        <div class="absolute bottom-0 left-0 right-0 bg-white/95 p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="flex items-center justify-between gap-2">
                <!-- Compare/Size Icon -->
                <button class="flex items-center justify-center w-10 h-10 hover:bg-neutral-100 rounded transition-colors" aria-label="Compare sizes">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                </button>
                
                <!-- Add to Cart Button -->
                <a 
                    href="{{ product_product.url }}" 
                    class="flex-1 bg-black text-white text-center py-2.5 px-4 text-xs font-semibold tracking-wider uppercase hover:bg-neutral-800 transition-colors"
                >
                    ADD TO CART
                </a>
                
                <!-- Wishlist Icon -->
                <button class="flex items-center justify-center w-10 h-10 hover:bg-neutral-100 rounded transition-colors" aria-label="Add to wishlist">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Image Pagination Dots -->
        {% if product_product.media.size > 1 %}
            <div class="absolute bottom-4 left-0 right-0 flex justify-center gap-1.5">
                {% for media in product_product.media limit: 3 %}
                    <div class="w-2 h-2 rounded-full {% if forloop.first %}bg-black{% else %}bg-neutral-400{% endif %}"></div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    
    <!-- Product Info -->
    <div class="p-4 text-left">
        <!-- Star Rating -->
        <div class="flex items-center gap-0.5 mb-2">
            {% for i in (1..4) %}
                <svg class="w-4 h-4" fill="#FFA500" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
            {% endfor %}
            <svg class="w-4 h-4" fill="#D1D5DB" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span class="text-sm text-neutral-600 ml-1">3.2</span>
        </div>
        
        <!-- Product Title -->
        <a href="{{ product_product.url }}" class="block text-neutral-900 font-normal text-base mb-2 hover:text-neutral-700 transition-colors">
            {{ product_product.title }}
        </a>
        
        <!-- Product Price -->
        <p class="text-neutral-900 font-normal text-base">
            From: {{ product_product.price | money }}
        </p>
    </div>
</div>