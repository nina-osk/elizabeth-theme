<div class="product-card bg-white rounded-lg overflow-hidden transition-all duration-300 w-full">
    <!-- Product Image with Actions -->
    <div class="relative bg-neutral-100 group product-image-container">
        <a href="{{ product.url }}" class="block w-full h-full">
            {% if product.featured_image %}
                <img 
                    class="w-full h-full object-cover" 
                    src="{{ product.featured_image | image_url: width: 800 }}" 
                    alt="{{ product.featured_image.alt }}" 
                    width="800" 
                    height="800" 
                    loading="lazy"
                >
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-contain' }}
            {% endif %}
        </a>
        
        <!-- Actions Bar at Bottom of Image -->
        <div class="absolute bottom-0 left-0 right-0 bg-white/95 p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="flex items-center justify-between gap-2">
                <!-- Compare/Size Icon -->
                <button class="flex items-center justify-center w-10 h-10 hover:bg-neutral-100 rounded transition-colors" aria-label="Compare sizes">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                </button>
                
                <!-- Add to Cart Button -->
                {% assign current_variant = product.selected_or_first_available_variant %}
                <form action="{{ routes.cart_add_url }}" method="post" class="flex-1" data-product-form>
                    <input type="hidden" name="id" value="{{ current_variant.id }}">
                    <button 
                        type="submit"
                        class="w-full bg-black text-white text-center py-2.5 px-4 text-xs font-semibold tracking-wider uppercase hover:bg-neutral-800 transition-colors"
                    >
                        ADD TO CART
                    </button>
                </form>
                
                <!-- Wishlist Icon -->
                <button class="flex items-center justify-center w-10 h-10 hover:bg-neutral-100 rounded transition-colors" aria-label="Add to wishlist">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Image Pagination Dots -->
        {% if product.media.size > 1 %}
            <div class="absolute bottom-4 left-0 right-0 flex justify-center gap-1.5">
                {% for media in product.media limit: 3 %}
                    <div class="w-2 h-2 rounded-full {% if forloop.first %}bg-black{% else %}bg-neutral-400{% endif %}"></div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    
    <!-- Product Info -->
    <div class="p-2 md:p-4 text-left">
        <!-- Product Title -->
        <a href="{{ product.url }}" class="block text-neutral-900 font-normal text-sm md:text-base mb-1 md:mb-2 hover:text-neutral-700 transition-colors line-clamp-2">
            {{ product.title }}
        </a>
        
        <!-- Product Price -->
        <p class="text-neutral-900 font-normal text-sm md:text-base">
            {% assign variant = product.selected_or_first_available_variant %}
            {% if variant.compare_at_price > variant.price %}
                <span class="text-neutral-500 line-through mr-2">{{ variant.compare_at_price | money_with_currency }}</span>
                <span class="text-red-600">{{ variant.price | money_with_currency }}</span>
            {% elsif product.price_varies %}
                Desde {{ product.price_min | money_with_currency }}
            {% else %}
                {{ variant.price | money_with_currency }}
            {% endif %}
        </p>
    </div>
</div>

<style>
.product-image-container {
    aspect-ratio: 1 / 1;
    min-height: 350px;
}

/* Mobile - Transparent background for add to cart */
@media (max-width: 767px) {
    .product-image-container .group-hover\:opacity-100 {
        background: transparent !important;
    }
    
    .product-image-container button[type="submit"] {
        background: transparent !important;
        color: #2d2d2d !important;
        padding: 0.5rem !important;
    }
}

@media (min-width: 480px) {
    .product-image-container {
        min-height: 400px;
    }
}

@media (min-width: 640px) {
    .product-image-container {
        min-height: 450px;
    }
}

@media (min-width: 768px) {
    .product-image-container {
        min-height: auto;
    }
}
</style>